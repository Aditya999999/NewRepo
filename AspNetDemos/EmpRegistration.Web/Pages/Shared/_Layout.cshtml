<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmpRegistration.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container" style="background-color:darkgray">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src = "~/NewFolder/pic9.png" style=" width:100px"/></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Manage</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" style="background-color:orangered"
                                   asp-area="Employees" asp-controller="Emp" asp-action="Index">1.Registration Form</a>
                                 <a class="dropdown-item" style="background-color:white"
                                   asp-area="Employees" asp-controller="EmployeeRegistrations" asp-action="Index">2.Form Using Bootstrap</a>
                                <a class="dropdown-item" style="background-color:"
                                   asp-area="Products" asp-controller="Products" asp-action="Index">3.Product</a>
                                <a class="dropdown-item" style="background-color:green"
                                   asp-area="Products" asp-controller="ProductCategories" asp-action="Index">4.Product Categories</a>
                            </div>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container-fluid" style="background-color:aliceblue">
        <main role="main" class="pb-3">
           

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:darkred">
        <div class="container">
            &copy; 2022 - Aditya Dubey - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
